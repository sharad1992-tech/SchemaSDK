<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
               
        <item name="android:timePickerStyle">@style/TimePickerTheme</item>
        <item name="actionMenuTextAppearance">@style/MyMenuTextAppearance</item>
    </style>


    <style name="AppFullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AppFullScreenThemeSplash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"></style>

    <style name="ToolbarTheme" parent="AppTheme">
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>


    <style name="TextThemeLight" parent="AppTheme">
        <item name="android:fontFamily">@font/opensans_light</item>
        <item name="android:textSize">@dimen/fourteen_sp</item>
        <item name="android:textColor">@color/text_color_gray</item>
    </style>

    <style name="TextThemeRegular" parent="AppTheme">
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textSize">@dimen/fourteen_sp</item>
        <item name="android:textColor">@color/text_color_gray</item>
    </style>

    <style name="TextThemeSemiBold" parent="AppTheme">
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textSize">@dimen/sixteen_sp</item>
        <item name="android:textColor">@color/text_color_dark_blue</item>
    </style>

    <style name="TextThemeBold" parent="AppTheme">
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:textSize">@dimen/eighteen_sp</item>
        <item name="android:textColor">@color/text_color_dark_blue</item>
    </style>

    <style name="TextThemeBold_gray" parent="AppTheme">
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:textSize">@dimen/eighteen_sp</item>
        <item name="android:textColor">@color/grey_border_color</item>
    </style>

    <style name="TextThemeBold_black" parent="AppTheme">
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:textSize">@dimen/eighteen_sp</item>
        <item name="android:textColor">@color/black_color</item>
    </style>





    <style name="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/eight_dp</item>
        <item name="android:paddingRight">@dimen/eight_dp</item>
        <item name="android:paddingBottom">@dimen/eight_dp</item>
        <item name="android:theme">@style/TextThemeRegular</item>
    </style>

    <style name="MyCheckbox" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:colorControlNormal">@color/grey_border_color</item>
        <item name="android:colorControlActivated">@color/aqua_color</item>
        <item name="android:colorControlHighlight">@color/aqua_color</item>
        <item name="android:textAppearance">@style/TextThemeRegular</item>
    </style>

    <style name="MyChkTextColor">
        <item name="android:textColor">@color/text_color_gray</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/forty_dp</item>
        <item name="android:paddingLeft">@dimen/twelve_dp</item>
        <item name="android:textColorHint">@color/text_color_gray_hint</item>
        <item name="android:textColor">@color/text_color_dark_blue</item>
        <item name="android:textSize">@dimen/sixteen_sp</item>
        <item name="android:theme">@style/TextThemeRegular</item>
        <item name="android:background">@drawable/default_border_empty</item>
        <item name="android:singleLine">true</item>
    </style>

    <declare-styleable name="MaskedEditText">
        <attr name="mask" format="string" />
        <attr name="placeholder" format="string" />
    </declare-styleable>

    <style name="MyProgressbar" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="MyRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textAppearance">@style/TextThemeRegular</item>
        <item name="android:textColor">@color/text_color_gray</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:textSize">@dimen/sixteen_sp</item>
    </style>

    <style name="NavigationView" parent="Base.Theme.AppCompat.Light">
        <item name="android:listDivider">@color/border_color</item>
    </style>

    <style name="TimePickerTheme" parent="android:Widget.Material.Light.TimePicker">
        <item name="android:timePickerMode">spinner</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MySeekBarTheme" parent="Widget.AppCompat.SeekBar" >
        <item name="colorAccent">@color/orange_color</item>
    </style>

    <style name="MyAlertDialogTheme" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowFixedWidthMajor">90%</item>
        <item name="windowFixedWidthMinor">90%</item>
    </style>

    <style name="AppTheme_bottom" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
               
        <item name="android:timePickerStyle">@style/TimePickerTheme</item>

    </style>

    <style name="MyMenuTextAppearance" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MyRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:minHeight">8dp</item>
        <item name="android:maxHeight">8dp</item>
        <item name="colorControlActivated">@color/grey_border_color</item>
        <item name="android:paddingRight">8dp</item>
    </style>
</resources>
